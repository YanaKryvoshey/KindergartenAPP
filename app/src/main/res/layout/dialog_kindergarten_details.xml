<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Kindergarten_dialog"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/placeDialog_LAY_placeDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/placeDialog_LBL_placeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background"
            android:fontFamily="casual"
            android:text="Place Name"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/placeDialog_LBL_placeRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textColor="@color/design_default_color_secondary_variant"
            android:layout_below="@id/placeDialog_LBL_placeName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Place Rating"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/placeDialog_BTN_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeDialog_LBL_placeRating"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="chat"
            app:cornerRadius="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/placeDialog_IMG_placeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/placeDialog_LBL_placeRating"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:layout_weight="50"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>