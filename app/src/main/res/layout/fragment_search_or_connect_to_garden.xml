<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Fragment.SearchOrConnectToGardenFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/OR_BTN_connect"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="connect to my garden"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_EDT_password"
        app:layout_constraintVertical_bias="0.04" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/OR_BTN_search"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="search garden"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_EDT_password"
        app:layout_constraintVertical_bias="0.04" />


</LinearLayout>